# Application
APP_ENV=production
PORT=8080

# Frontend
# If serving SPA via the Go server, set FRONTEND_DIR to the built dist path
FRONTEND_DIR=./sinjeem-game/dist
# The origin allowed for CORS and OAuth redirects
FRONTEND_ORIGIN=http://localhost:8080

# Database
# For SQLite file path, can be absolute or relative to server working dir
DATABASE_URL=file:server.db
# For Postgres instead (uncomment and set):
# DATABASE_URL=postgres://user:pass@host:5432/dbname?sslmode=disable

# Sessions
# Set a strong random secret (32+ chars)
SESSION_SECRET=CHANGE_ME_TO_A_STRONG_SECRET

# Questions content directory (default points to the repo when running locally)
# For production, you can copy public/questions and set this to that path
QUESTIONS_DIR=./sinjeem-game/public/questions

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# The server callback URL
OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback
# After login, where to redirect the user (SPA hash route by default)
AFTER_LOGIN_REDIRECT=http://localhost:8080/#/
