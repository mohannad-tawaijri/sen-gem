# Use this when deploying on Render (Web Service with Dockerfile)
APP_ENV=production
PORT=8080

# Render subdomain first; update later if you add a custom domain
FRONTEND_ORIGIN=https://sen-gem.onrender.com
AFTER_LOGIN_REDIRECT="https://sen-gem.onrender.com/#/"
OAUTH_REDIRECT_URL=https://sen-gem.onrender.com/auth/google/callback

# Serve the built SPA from the Go server (Dockerfile copies dist to /app/web)
FRONTEND_DIR=/app/web

# SQLite persisted on Render Disk mounted at /data
DATABASE_URL=file:/data/server.db

# Questions content shipped in image (copied in Dockerfile)
QUESTIONS_DIR=/app/questions

# Generate a strong secret (32+ chars)
SESSION_SECRET=CHANGE_ME_TO_A_STRONG_SECRET

# Optional Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=