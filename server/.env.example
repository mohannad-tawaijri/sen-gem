# Basic server
PORT=8080
FRONTEND_ORIGIN=http://localhost:5173

# Database (SQLite dev default or Postgres)
# For SQLite (recommended for local dev): file:server.db
DATABASE_URL=file:server.db
# For Postgres: postgres://user:pass@localhost:5432/sengem?sslmode=disable
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/sengem?sslmode=disable

# Sessions
SESSION_SECRET=replace-with-a-long-random-string

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match the OAuth client settings in Google Cloud
OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Where to redirect the browser after successful login
AFTER_LOGIN_REDIRECT=/api/me

# Questions directory (relative to this server folder by default)
QUESTIONS_DIR=../sinjeem-game/public/questions
